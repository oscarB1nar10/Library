<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- ToolbarComponent -->

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="background">?attr/colorPrimary</item>
        <item name="elevation">4dp</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Toolbar_action_icon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="Toolbar_action_icon.Toolbar_left_action_icon">
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="Toolbar_action_icon.Toolbar_right_action_icon">
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="Toolbar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/toolbarTitle</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Fragments_padding">
        <item name="paddingStart">16dp</item>
        <item name="paddingEnd">16dp</item>
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingBottom">32dp</item>
    </style>

    <style name="Book_image">
        <item name="android:layout_width">match_parent</item>
        <item name="headerLayout">@id/wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="Card_book_title">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginEnd">16sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="singleLine">true</item>
    </style>

    <!-- Divider -->
    <style name="Divider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/slate_100</item>
    </style>

    <!-- Forms -->
    <style name="FormSection">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/slate_500</item>
    </style>

    <!-- Notes / Alert -->
    <style name="notes_alert">
        <item name="android:padding">@dimen/activity_vertical_margin</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/notes_view_layout_background</item>
        <item name="android:minHeight">112dp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:gravity">start|top</item>
    </style>

    <!-- Character counter -->
    <style name="character_counter">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/slate_400</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

</resources>
